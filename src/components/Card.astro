---
export interface Props {
  title: string;
  body: string;
  src: string;
}

const { src, title, body } = Astro.props;
---

<li class="link-card flex bg-[white] bg-none bg-[400%] bg-[100%] p-1">
  <a class="w-full no-underline leading-[1.4] bg-[white] flex flex-col items-center px-5 py-4">
    <div class="w-full aspect-[1/1] overflow-hidden mb-8 mx-[10%]">
      <img class="w-full h-full object-fill aspect-[1/1]" src={src} alt="Astro" />
    </div>
    <h2 class="text-xl mt-4 mb-0">
      {title}
    </h2>
    <p class="text-[#444] mt-2 mb-0">
      {body}
    </p>
  </a>
</li>


---
export interface Props {
  title: string;
  body: string;
  src: string;
}

const { src, title, body } = Astro.props;
---

<li class="flex bg-[white] bg-none bg-[400%] bg-[100%] w-[20vw] min-w-[16rem] p-1">
  <a class="w-full no-underline leading-[1.4] bg-[white] flex flex-col items-center justify-start my-8 px-5 py-4">
    <div class="flex items-center justify-center aspect-[1/1] mb-8 mx-[30%]">
      <img class="w-full aspect-[1/1] rounded-[50%]" src={src} alt="Astro" />
    </div>
    <h2 class="text-xl text-blue mt-4 mb-8">
      {title}
    </h2>
    <p class="text-[#444] mt-2 mb-0">
      {body}
    </p>
  </a>
</li>


---
export interface Props {
  title: string;
  body: string;
  src: string;
  srcmobile: string;
  user: string;
}

const { src, srcmobile, title, body, user } = Astro.props;
---

<li class="flex bg-[white] bg-none bg-[400%] bg-[100%] w-[20vw] min-w-[16rem] p-1">
  <div class="w-full no-underline leading-[1.4] bg-[white] flex flex-col items-center justify-start my-8 px-5 py-4">
    <div class="flex items-center justify-center aspect-[1/1] mb-6 mx-[20%] pc:mb-8 pc:mx-[30%]">
      <img class="hidden pc:block w-full aspect-[1/1] rounded-[50%]" src={src} alt="Astro" />
      <img class="pc:hidden w-full aspect-[1/1] rounded-[50%]" src={srcmobile} alt="Astro" />
    </div>
    <h2 class="text-xl text-blue mt-4 mb-8">
      {title}
    </h2>
    <p class="text-[#444] mt-2 mb-0">
      {body}
    </p>
    <h3 class="text-lg text-blue mt-4"> {user}</h3>
  </div>
</li>


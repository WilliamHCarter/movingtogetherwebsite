---
import Logo from "../components/Logo.astro";
import Menu from "./Menu.astro";
---

<div class="flex justify-between items-center my-4">
  <Logo />
  <Menu />
  <div class="navlinks hidden pc:flex justify-between items-center gap-6 mr-[2vw]">
    <a class="text-[1.1rem] text-blue font-semibold text-center no-underline m-0" href="#">Home</a>
    <a class="text-[1.1rem] text-blue font-semibold text-center no-underline m-0" href="#op-about">About</a>
    <a class="text-[1.1rem] text-blue font-semibold text-center no-underline m-0" href="#testm">Testimonials</a>
    <a class="text-[1.1rem] text-blue font-semibold text-center no-underline m-0" href="#contact">Contact</a>
  </div>
</div>
<style>
  h3 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    text-align: center;
  }
  @media only screen and (max-width: 700px) {
    h3 {
      font-size: 1.5rem;
    }
  }
</style>
